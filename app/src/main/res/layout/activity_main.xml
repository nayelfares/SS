<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:background="@color/colorAccent"
        app:contentInsetEnd="0dp"
        app:contentInsetStart="0dp"
        android:layout_height="60dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="S &amp; S"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:textSize="22sp"
                    android:textColor="@color/white"/>
                <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:id="@+id/create"
                    android:src="@drawable/ic_create"
                    android:layout_centerVertical="true"
                    android:onClick="create"
                    android:background="@color/transparent"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="4dp"/>
            </RelativeLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <com.dinuscxj.refresh.RecyclerRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/getMore"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#2203DAC5"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="My files"
                    android:id="@+id/myFiles"
                    android:textSize="14sp"
                    android:layout_margin="8dp"
                    android:background="@drawable/menu_backgrond"
                    android:textColor="@drawable/menu_text_color"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Sent"
                    android:id="@+id/sent"
                    android:textSize="14sp"
                    android:layout_margin="8dp"
                    android:background="@drawable/menu_backgrond"
                    android:textColor="@drawable/menu_text_color"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Reveived"
                    android:id="@+id/received"
                    android:textSize="14sp"
                    android:layout_margin="8dp"
                    android:background="@drawable/menu_backgrond"
                    android:textColor="@drawable/menu_text_color"
                    android:gravity="center"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/content"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
        </LinearLayout>
    </com.dinuscxj.refresh.RecyclerRefreshLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>